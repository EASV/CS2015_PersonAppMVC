@model List<PersonApplicationDll.Entities.PersonStatus>

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


<form method="post" action="~/Person/Create">
    <div class="form-group">
        <label for="name">Name</label>
        <input id="name" type="text"
               class="form-control" placeholder="Type name"
               name="name">
    </div>

    <div class="form-group">
        <label for="status">Status</label>
        <select class="form-control" id="status" name="status.id">
            @foreach (var status in Model)
            {
                <option value="@status.Id">@status.Name</option>
            }
        </select>
    </div>

    

    <button type="submit" class="btn btn-default">Save user</button>
</form>

<hr/>
<a class="btn btn-default" href="/Person/Index">Go Back</a>